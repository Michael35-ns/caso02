@model CasoMVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<section class="contact-us section" style="padding-top: 180px; margin-top: 60px;">
    <div class="container">
        <div class="row justify-content-center">

                <div class="row g-0 align-items-stretch" style="min-height: 600px;">

                    <!-- Imagen -->
                    <div class="col-lg-6 d-none d-lg-block p-0">
                        <img src="~/assets/img/evento.jpg" alt="Evento"
                             class="w-100 h-100" style="object-fit: cover;" />
                    </div>

                    <div class="col-lg-6 bg-white d-flex align-items-center">
                        <form asp-action="Login" method="post" id="contact" class="w-100 px-5">

                            <div class="text-center mb-4">
                                <h2 class="fw-bold" style="color: #388da8;">Inicia Sesión</h2>
                                <p class="text-muted">Gestiona tus eventos con <strong>EventCorp</strong></p>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <fieldset class="mb-3">
                                <input asp-for="NombreUsuario" class="form-control" placeholder="Usuario" autocomplete="on" required />
                            <span asp-validation-for="NombreUsuario" class="text-d
            <div class="col-lg-10 p-0 overfloanger small"></span>
                            </fieldset>

                            <fieldset class="mb-4">
                                <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" required />
                                <span asp-validation-for="Contrasena" class="text-danger small"></span>
                            </fieldset>

                            <fieldset class="mb-4">
                                <button type="submit" id="form-submit" class="main-button w-100">Iniciar Sesión</button>
                            </fieldset>

                            <div class="text-center mt-3">
                                <p class="mb-1">¿No tienes cuenta?</p>
                                <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary rounded-pill px-4">
                                    Regístrate aquí
                                </a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
