@model CasoModels.Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 180px; margin-top: 100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 rounded-4 bg-white p-5" style="font-family: 'Inter', sans-serif;">
                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1" style="color: #388da8;">Detalles de la Categoría</h2>
                    <p class="text-muted mb-0">Consulta los datos de la categoría seleccionada</p>
                </div>
                <div class="mb-3">
                    <label class="text-secondary">Nombre</label>
                    <div>@Model.Nombre</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Descripción</label>
                    <div>@Model.Descripcion</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Estado</label>
                    <div>
                        @if (Model.Estado)
                        {
                            <span class="badge" style="background-color: #388da8;">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Fecha de Registro</label>
                    <div>@Model.FechaRegistro.ToString("dd/MM/yyyy")</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Registrado por</label>
                    <div>@Model.UsuarioRegistro?.NombreUsuario</div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-lg text-white" style="background-color: #388da8; border-radius: 50px;">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-dark btn-lg" style="border-radius: 50px;">
                        <i class="bi bi-arrow-left me-1"></i> Volver al listado
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

