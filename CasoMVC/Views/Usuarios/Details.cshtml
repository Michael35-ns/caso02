@model CasoMVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 180px; margin-top: 100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 rounded-4 bg-white p-5" style="font-family: 'Inter', sans-serif;">

                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1" style="color: #388da8;">Detalles del Usuario</h2>
                    <p class="text-muted mb-0">Consulta los datos del usuario seleccionado</p>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Nombre de Usuario</label>
                    <div>@Model.NombreUsuario</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Nombre Completo</label>
                    <div>@Model.NombreCompleto</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Correo</label>
                    <div>@Model.Correo</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Teléfono</label>
                    <div>@Model.Telefono</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Rol</label>
                    <div>
                        <span class="badge bg-secondary px-3 py-2">@Model.Rol</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@ViewBag.UsuarioId" class="btn btn-lg text-white" style="background-color: #388da8; border-radius: 50px;">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-dark btn-lg" style="border-radius: 50px;">
                        <i class="bi bi-arrow-left me-1"></i> Volver al listado
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>
