@model CasoMVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 180px; margin-top: 100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 rounded-4 bg-white p-5" style="font-family: 'Inter', sans-serif;">

                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1 text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> Confirmar Eliminación
                    </h2>
                    <p class="text-muted">¿Estás seguro de que deseas eliminar este usuario? Esta acción no se puede deshacer.</p>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Nombre de Usuario</label>
                    <div>@Model.NombreUsuario</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Nombre Completo</label>
                    <div>@Model.NombreCompleto</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Correo</label>
                    <div>@Model.Correo</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Teléfono</label>
                    <div>@Model.Telefono</div>
                </div>

                <div class="mb-3">
                    <label class="text-secondary">Rol</label>
                    <div>
                        <span class="badge bg-secondary px-3 py-2">@Model.Rol</span>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@ViewBag.UsuarioId" />

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger btn-lg" style="border-radius: 50px;">
                            <i class="bi bi-trash me-1"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-dark btn-lg" style="border-radius: 50px;">
                            <i class="bi bi-arrow-left me-1"></i> Cancelar
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

