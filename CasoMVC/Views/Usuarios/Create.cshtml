@model CasoMVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 120px; margin-top: 80px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 rounded-4 bg-white p-5" style="font-family: 'Inter', sans-serif;">

                <div class="text-center mb-4">
                    <h2 class="fw-bold mb-1" style="color: #388da8;">Crear Nuevo Usuario</h2>
                    <p class="text-muted mb-0">Agrega un nuevo usuario con los permisos adecuados</p>
                </div>

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="NombreUsuario" class="form-label"></label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NombreCompleto" class="form-label"></label>
                        <input asp-for="NombreCompleto" class="form-control" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label"></label>
                        <input asp-for="Contrasena" class="form-control" type="password" />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Rol" class="form-label"></label>
                        <select asp-for="Rol" class="form-select">
                            <option value="">Seleccione un rol</option>
                            <option>Admin</option>
                            <option>Organizador</option>
                            <option>Usuario</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn text-white btn-lg" style="background-color: #388da8; border-radius: 50px;">
                            <i class="bi bi-save me-1"></i> Guardar Usuario
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg" style="border-radius: 50px;">
                            <i class="bi bi-arrow-left me-1"></i> Volver al listado
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
