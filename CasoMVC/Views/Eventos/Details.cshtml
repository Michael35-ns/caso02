@model CasoModels.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 120px;">
    <div class="container">
        <div class="col-lg-10 mx-auto rounded-4 bg-white p-5 shadow" style="font-family: 'Inter', sans-serif;">
            <h2 class="fw-bold mb-4 text-center" style="color: #388da8;">
                <i class="bi bi-eye me-2"></i> Detalles del Evento
            </h2>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-secondary">Título</dt>
                <dd class="col-sm-8">@Model.Titulo</dd>

                <dt class="col-sm-4 text-secondary">Categoría</dt>
                <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>

                <dt class="col-sm-4 text-secondary">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4 text-secondary">Fecha</dt>
                <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 text-secondary">Hora</dt>
                <dd class="col-sm-8">@Model.Hora</dd>

                <dt class="col-sm-4 text-secondary">Duración</dt>
                <dd class="col-sm-8">@Model.Duracion minutos</dd>

                <dt class="col-sm-4 text-secondary">Cupo Máximo</dt>
                <dd class="col-sm-8">@Model.CupoMaximo</dd>

                <dt class="col-sm-4 text-secondary">Ubicación</dt>
                <dd class="col-sm-8">@Model.Ubicacion</dd>
            </dl>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </a>
            </div>
        </div>
    </div>
</section>
