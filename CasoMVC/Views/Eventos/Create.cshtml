@model CasoModels.Evento

@{
    ViewData["Title"] = "Crear Evento";
}

<section class="section mb-5" style="padding-top: 200px;">
    <div class="container">
        <div class="col-lg-10 mx-auto rounded-4 bg-white" style="font-family: 'Inter', sans-serif;">
            <h2 class="fw-bold mb-4 text-center" style="color: #388da8;">
                <i class="bi bi-calendar-plus me-2"></i> Nuevo Evento
            </h2>

            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Titulo" class="form-label">Título</label>
                        <input asp-for="Titulo" class="form-control" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoriaId" class="form-label">Categoría</label>
                        <select asp-for="CategoriaId" class="form-select" asp-items="@(ViewData["CategoriaId"] as IEnumerable<SelectListItem>)"></select>

                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Fecha" class="form-label">Fecha</label>
                        <input asp-for="Fecha" class="form-control" type="date" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Hora" class="form-label">Hora</label>
                        <input asp-for="Hora" class="form-control" type="time" />
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Duracion" class="form-label">Duración (en minutos)</label>
                        <input asp-for="Duracion" class="form-control" />
                        <span asp-validation-for="Duracion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CupoMaximo" class="form-label">Cupo Máximo</label>
                        <input asp-for="CupoMaximo" class="form-control" />
                        <span asp-validation-for="CupoMaximo" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="Ubicacion" class="form-label">Ubicación</label>
                        <input asp-for="Ubicacion" class="form-control" />
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 me-2">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn text-white rounded-pill px-4 py-2"
                            style="background-color: #388da8;">
                        <i class="bi bi-save me-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
