@model CasoMVC.Models.EventoViewModel

@{
    ViewData["Title"] = "Detalle del Evento";
}

<section class="section mb-5" style="padding-top: 50px; margin-top: 160px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 rounded-4 bg-white p-5 shadow-sm" style="font-family: 'Inter', sans-serif;">

                <h2 class="fw-bold mb-4 text-primary">
                    <i class="bi bi-calendar-event me-2"></i> @Model.Titulo
                </h2>

                <dl class="row fs-5">
                    <dt class="col-sm-4 text-secondary">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4 text-secondary">Fecha</dt>
                    <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 text-secondary">Hora</dt>
                    <dd class="col-sm-8">@Model.Hora</dd>

                    <dt class="col-sm-4 text-secondary">Cupo Máximo</dt>
                    <dd class="col-sm-8">@Model.CupoMaximo</dd>

                    <dt class="col-sm-4 text-secondary">Categoría</dt>
                    <dd class="col-sm-8">@Model.Categoria</dd>
                </dl>

                <div class="d-flex justify-content-end align-items-center gap-2 mt-4 flex-wrap">

                    <button class="btn btn-outline-success rounded-pill px-4 d-flex align-items-center"
                            title="Inscribirme"
                            onclick="confirmInscripcion('@Model.Titulo', '@Model.Id', '/Inscripciones/Inscribirme/{id}')">
                        <i class="bi bi-check-circle me-2"></i> Inscribirme
                    </button>

                    <a asp-action="Eventos" class="btn btn-outline-primary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i> Volver a Eventos
                    </a>
                </div>


            </div>
        </div>
    </div>
</section>
