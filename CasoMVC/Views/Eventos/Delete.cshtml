@model CasoModels.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<section class="section pt-5 mt-5 mb-5" style="padding-top: 120px;">
    <div class="container">
        <div class="col-lg-10 mx-auto rounded-4 bg-white p-5 shadow" style="font-family: 'Inter', sans-serif;">
            <h2 class="fw-bold mb-4 text-center text-danger">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirmar Eliminación
            </h2>

            <p class="lead text-center mb-4 text-muted">¿Estás seguro de que deseas eliminar este evento? Esta acción no se puede deshacer.</p>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-secondary">Título</dt>
                <dd class="col-sm-8">@Model.Titulo</dd>

                <dt class="col-sm-4 text-secondary">Categoría</dt>
                <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>

                <dt class="col-sm-4 text-secondary">Fecha</dt>
                <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 text-secondary">Hora</dt>
                <dd class="col-sm-8">@Model.Hora</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 me-2">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger rounded-pill px-4 py-2">
                        <i class="bi bi-trash me-2"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>
